{
  "expo": {
    "name": "camera-view-mobile",
    "slug": "camera-view-mobile",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#121218"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.cameraviewmobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#121218"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.cameraviewmobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Разрешить $(PRODUCT_NAME) использовать камеру для сканирования QR-кодов",
          "microphonePermission": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Приложению нужен доступ к фотографиям для выбора изображений с QR-кодами",
          "cameraPermission": "Разрешить $(PRODUCT_NAME) использовать камеру для создания фото",
          "microphonePermission": false
        }
      ],
      "expo-av"
    ]
  }
}
